{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Run Tests",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": ["test"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Run Tests with UI",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": ["test", "--ui"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Show Report",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": ["show-report"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ESLint: Lint Tests",
            "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
            "args": ["tests/**/*.ts", "playwright.config.ts"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}