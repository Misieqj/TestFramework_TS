{
	"compilerOptions": {
		"target": "ES2022", 
		"module": "CommonJS",
		"moduleResolution": "Node",
		"types": ["node", "@playwright/test"],
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
          "@/tests/*": ["tests/*"]
        }
    },
	"include": ["tests/**/*.ts"]
}
